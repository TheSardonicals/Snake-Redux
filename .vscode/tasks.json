{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build (debug)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                "-Wextra",
                "-Wdisabled-optimization",
                "src/snake.cpp",
                "src/node.cpp",
                "src/clock.cpp",
                "src/texture.cpp",
                "src/main.cpp",
                "src/game.cpp",
                "-o",
                "'${workspaceFolder}/bin/SnakeRedux(debug).x86_64'",
                "-lSDL2"

            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$gcc"
        }
    ]
}