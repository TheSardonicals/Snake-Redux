{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build (debug)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-D VK_DEBUG",
                "-Wall",
                "-Wextra",
                "-Wdisabled-optimization",
                "${workspaceFolder}/src/main.cpp",
                "-o",
				"${workspaceFolder}/bin/HelloVulkan(debug).x86_64",
				"-lSDL2",
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$gcc"
        },
    ]
}